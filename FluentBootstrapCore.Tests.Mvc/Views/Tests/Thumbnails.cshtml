@using FluentBootstrap;

@using (Html.Bootstrap().Container().Begin())
{
    @Html.Bootstrap().Heading1("Standard")
    using (Html.Bootstrap().Div().SetId("test-standard").Begin())
    {
        using (var row = Html.Bootstrap().GridRow().Begin())
        {
            using (var col = row.GridColumn(4).Begin())
            {
                @col.Thumbnail("http://picsum.photos/400").SetHref("#")
            }
            using (var col = row.GridColumn(4).Begin())
            {
                @col.Thumbnail("http://picsum.photos/400").SetHref("#")
            }
            using (var col = row.GridColumn(4).Begin())
            {
                @col.Thumbnail("http://picsum.photos/400")
            }
        }
    }

    <hr />

    @Html.Bootstrap().Heading1("Container")
    using (Html.Bootstrap().Div().SetId("test-container").Begin())
    {
        using (var row = Html.Bootstrap().GridRow().Begin())
        {
            using (var col = row.GridColumn(3).Begin())
            {
                using (var tc = col.ThumbnailContainer().Begin())
                {
                    @tc.Thumbnail("http://picsum.photos/400").SetHref("#")
                }
            }
            using (var col = row.GridColumn(3).Begin())
            {
                using (var tc = col.ThumbnailContainer().Begin())
                {
                    @tc.Thumbnail("http://picsum.photos/400")
                }
            }
            using (var col = row.GridColumn(3).Begin())
            {
                using (var tc = col.ThumbnailContainer().Begin())
                {
                    @tc.Thumbnail("http://picsum.photos/400").SetHref("#")
                    using (@tc.Caption().Begin())
                    {
                        @Html.Bootstrap().Heading3("Heading")
                        @Html.Bootstrap().Paragraph("Caption goes here.")
                    }
                }
            }
            using (var col = row.GridColumn(3).Begin())
            {
                using (var tc = col.ThumbnailContainer().Begin())
                {
                    @tc.Thumbnail("http://picsum.photos/400")
                    using (@tc.Caption().Begin())
                    {
                        @Html.Bootstrap().Heading3("Heading")
                        @Html.Bootstrap().Paragraph("Caption goes here.")
                    }
                }
            }
        }
    }
}