@using FluentBootstrap;

@using (Html.Bootstrap().Container().Begin())
{
    @Html.Bootstrap().Heading1("Simple")
    using (Html.Bootstrap().Div().SetId("test-simple").Begin())
    {
        using (var dropdown = Html.Bootstrap().Dropdown("Dropdown").Begin())
        {         
            @dropdown.DropdownHeader("Header")
            @dropdown.DropdownDivider()
            @dropdown.DropdownLink("A")
            @dropdown.DropdownLink("B", "http://www.google.com")   
        }
    }
    
    <hr />

    @Html.Bootstrap().Heading1("No Caret")
    using (Html.Bootstrap().Div().SetId("test-no-caret").Begin())
    {
        using (var dropdown = Html.Bootstrap().Dropdown("No Caret").SetCaret(false).Begin())
        {
            @dropdown.DropdownLink("A", "http://www.google.com")
        }
    }

    <hr />

    @Html.Bootstrap().Heading1("Button Styles")
    using (Html.Bootstrap().Div().SetId("test-button-styles").Begin())
    {
        using (var dropdown = Html.Bootstrap().Dropdown("Button").SetSize(ButtonSize.Xs).SetState(ButtonState.Warning).Begin())
        {
            @dropdown.DropdownLink("A", "http://www.google.com")
        }
    }
    
    <hr />

    @Html.Bootstrap().Heading1("Right Menu")
    using (Html.Bootstrap().Div().SetId("test-right-menu").Begin())
    {
        using (var dropdown = Html.Bootstrap().Dropdown("Right").SetMenuRight().Begin())
        {
            @dropdown.DropdownHeader("Header")
            @dropdown.DropdownDivider()
            @dropdown.DropdownLink("A")
            @dropdown.DropdownLink("B", "http://www.google.com")
        }
    }

    <hr />

    @Html.Bootstrap().Heading1("Disabled")
    using (Html.Bootstrap().Div().SetId("test-disabled").Begin())
    {
        using (var dropdown = Html.Bootstrap().Dropdown("Disabled").Begin())
        {
            @dropdown.DropdownLink("A", "http://www.google.com")
            @dropdown.DropdownLink("B", "http://www.google.com").SetDisabled()
        }
    }

    <hr />

    @Html.Bootstrap().Heading1("Dropup")
    using (Html.Bootstrap().Div().SetId("test-dropup").Begin())
    {
        using (var dropdown = Html.Bootstrap().Dropdown("Dropup").SetDropup().Begin())
        {
            @dropdown.DropdownLink("A", "http://www.google.com")
            @dropdown.DropdownLink("B", "http://www.google.com")
        }
    }
    
    <hr />

    @Html.Bootstrap().Heading1("Active Link")
    using (Html.Bootstrap().Div().SetId("test-active-link").Begin())
    {
        using (var dropdown = Html.Bootstrap().Dropdown("Dropdown").Begin())
        {
            @dropdown.DropdownLink("A", "http://www.google.com")
            @dropdown.DropdownLink("B", "http://www.google.com").SetActive()
            @dropdown.DropdownLink("C", "http://www.google.com")
        }
    }
}